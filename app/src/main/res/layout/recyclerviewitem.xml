<!-- meeting_item_layout.xml -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:id="@+id/textViewMeetingTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting Title"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/textViewMeetingDescription"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting Description"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/textViewMeetingDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Meeting Date"
        android:textSize="14sp"
        android:textStyle="italic" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/buttonAccept"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Accept" />

        <Button
            android:id="@+id/buttonReject"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reject" />

    </LinearLayout>

</LinearLayout>
